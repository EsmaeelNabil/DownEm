<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.esmaeel.downem.VideoListActivity"
    android:background="@drawable/citybgfull"
    android:orientation="vertical"
    android:id="@+id/parent"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
       >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:paddingTop="4dp"
                android:orientation="horizontal"
                android:weightSum="2"
                android:background="@drawable/searchedittext"

                >

                <EditText
                    android:id="@+id/searcheditText2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="10dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="3dp"
                    android:layout_weight="1.5"
                    android:hint="Search something "
                    android:inputType="textPersonName"
                    android:textColor="#f9f9f9f9"
                    android:textColorHint="#f9f9f9f9"
                    android:background="@android:color/transparent"
                    />


                <ProgressBar
                    android:id="@+id/progressBar"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="3dp"
                    android:layout_weight="0.5" />

                <ImageView
                    android:id="@+id/search_icon"
                    android:layout_margin="10dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/ic_search_white_24dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
               android:background="#59543e59"
                >

                <Button
                    android:visibility="gone"
                    android:id="@+id/Play_button"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btnbgw"
                    android:text="Search"
                    android:textStyle="bold"
                    android:textAllCaps="false"
                    android:textSize="18.90sp"
                    android:textColor="#2b2b2b" />

                <ListView
                    android:id="@+id/search_list2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
